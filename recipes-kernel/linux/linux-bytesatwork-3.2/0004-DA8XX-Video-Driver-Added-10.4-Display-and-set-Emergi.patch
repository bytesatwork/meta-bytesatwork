---
 drivers/video/da8xx-fb.c |   24 +++++++++++++++++++-----
 1 file changed, 19 insertions(+), 5 deletions(-)

diff --git a/drivers/video/da8xx-fb.c b/drivers/video/da8xx-fb.c
index 0d33acc..5c7aa1b4 100644
--- a/drivers/video/da8xx-fb.c
+++ b/drivers/video/da8xx-fb.c
@@ -126,7 +126,7 @@
 #define  LCD_CLK_RESET_REG			0x70
 #define  LCD_CLK_MAIN_RESET			BIT(3)
 
-#define LCD_NUM_BUFFERS	2
+#define LCD_NUM_BUFFERS	1
 
 #define WSI_TIMEOUT	50
 #define PALETTE_SIZE	256
@@ -295,15 +295,29 @@ static struct da8xx_panel known_lcd_panels[] = {
 		.name = "EMERGING",
 		.width = 800,
 		.height = 480,
-		.hfp = 40,
-		.hbp = 88,
-		.hsw = 128,
+		.hfp = 2,
+		.hbp = 216,
+		.hsw = 30,
 		.vfp = 8,
-		.vbp = 27,
+		.vbp = 35,
 		.vsw = 2,
 		.pxl_clk = 33260000,
 		.invert_pxl_clk = 0,
 	},
+	/* Dataimage LVDS 10.4" */
+	[5] = {
+		.name = "DATA_IMAGE",
+		.width = 1024,
+		.height = 768,
+		.hfp = 8,
+		.hbp = 16,
+		.hsw = 4,
+		.vfp = 5,
+		.vbp = 8,
+		.vsw = 1,
+		.pxl_clk = 47185000,
+		.invert_pxl_clk = 0,
+	},
 };
 
