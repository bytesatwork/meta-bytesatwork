From: Daniel Ammann <daniel.ammann@bytesatwork.ch>
Date: Mon, 24 Apr 2017 10:32:16 +0200
Subject: [PATCH 18/25] dts: bytepanel: add label for display and enable it for
 et070080dh6

---
 arch/arm/boot/dts/bytepanel-et070080dh6.dts | 4 ++++
 arch/arm/boot/dts/bytepanel.dtsi            | 2 +-
 2 files changed, 5 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/bytepanel-et070080dh6.dts b/arch/arm/boot/dts/bytepanel-et070080dh6.dts
index c7fa599d29a0..55333c7c9ddb 100644
--- a/arch/arm/boot/dts/bytepanel-et070080dh6.dts
+++ b/arch/arm/boot/dts/bytepanel-et070080dh6.dts
@@ -104,6 +104,10 @@
 	default-state = "on";
 };
 
+&display {
+	status = "okay";
+};
+
 // ---- Backlight ----
 &backlight {
 	status = "okay";
diff --git a/arch/arm/boot/dts/bytepanel.dtsi b/arch/arm/boot/dts/bytepanel.dtsi
index 244f3aed1e36..c1a09e3a7d61 100644
--- a/arch/arm/boot/dts/bytepanel.dtsi
+++ b/arch/arm/boot/dts/bytepanel.dtsi
@@ -23,7 +23,7 @@
 	};
 
 	// FIXME: set pins not as LED; use a muxer or so
-	dispconf {
+	display: dispconf {
 		compatible = "gpio-leds";
 		status = "disabled";
 		pinctrl-names = "default";
