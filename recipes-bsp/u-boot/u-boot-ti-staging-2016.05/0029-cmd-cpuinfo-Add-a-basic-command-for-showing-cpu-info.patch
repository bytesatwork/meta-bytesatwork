From 72c55bfa5497ff298be0c1c562056fcc0208edf0 Mon Sep 17 00:00:00 2001
From: Daniel Ammann <daniel.ammann@bytesatwork.ch>
Date: Thu, 5 Apr 2018 17:12:52 +0200
Subject: [PATCH 29/29] cmd: cpuinfo: Add a basic command for showing cpu
 information

---
 cmd/Kconfig                 |  5 +++++
 cmd/Makefile                |  1 +
 cmd/cpuinfo.c               | 19 +++++++++++++++++++
 configs/am335x_m2_defconfig |  1 +
 4 files changed, 26 insertions(+)
 create mode 100644 cmd/cpuinfo.c

diff --git a/cmd/Kconfig b/cmd/Kconfig
index 8ff8cba9c2..4fffc28b7d 100644
--- a/cmd/Kconfig
+++ b/cmd/Kconfig
@@ -138,6 +138,11 @@ config CMD_CPU
 	  internal name) and clock frequency. Other information may be
 	  available depending on the CPU driver.
 
+config CMD_CPUINFO
+	bool "cpuinfo"
+	help
+	  Print information about the CPU.
+
 config CMD_LICENSE
 	bool "license"
 	help
diff --git a/cmd/Makefile b/cmd/Makefile
index 4d2ff65b71..d4993c3cc3 100644
--- a/cmd/Makefile
+++ b/cmd/Makefile
@@ -32,6 +32,7 @@ obj-$(CONFIG_CMD_CLK) += clk.o
 obj-$(CONFIG_CMD_CONSOLE) += console.o
 obj-$(CONFIG_CMD_CPLBINFO) += cplbinfo.o
 obj-$(CONFIG_CMD_CPU) += cpu.o
+obj-$(CONFIG_CMD_CPUINFO) += cpuinfo.o
 obj-$(CONFIG_DATAFLASH_MMC_SELECT) += dataflash_mmc_mux.o
 obj-$(CONFIG_CMD_DATE) += date.o
 obj-$(CONFIG_CMD_DEMO) += demo.o
diff --git a/cmd/cpuinfo.c b/cmd/cpuinfo.c
new file mode 100644
index 0000000000..0882fde1a6
--- /dev/null
+++ b/cmd/cpuinfo.c
@@ -0,0 +1,19 @@
+/*
+ * Copyright (C) 2018 bytes at work AG
+ *
+ * SPDX-License-Identifier:	GPL-2.0+
+ */
+
+#include <common.h>
+#include <command.h>
+
+static int do_cpuinfo(cmd_tbl_t *cmdtp, int flag, int argc, char * const argv[])
+{
+	return print_cpuinfo();
+}
+
+U_BOOT_CMD(
+	cpuinfo, 1, 1, do_cpuinfo,
+	"show cpu info",
+	""
+);
diff --git a/configs/am335x_m2_defconfig b/configs/am335x_m2_defconfig
index 090e3d728d..38cc7dbdf0 100644
--- a/configs/am335x_m2_defconfig
+++ b/configs/am335x_m2_defconfig
@@ -6,6 +6,7 @@ CONFIG_SPL=y
 CONFIG_SPL_STACK_R=y
 CONFIG_SYS_EXTRA_OPTIONS="NAND"
 CONFIG_HUSH_PARSER=y
+CONFIG_CMD_CPUINFO=y
 # CONFIG_CMD_IMLS is not set
 CONFIG_CMD_MEMINFO=y
 # CONFIG_CMD_FLASH is not set
